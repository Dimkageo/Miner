<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ToolSelection">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/beckground2"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/lne1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/back"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:id="@+id/text_money_shop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/obelix_pro"
                    android:gravity="center_vertical"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="@string/money"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_weight="9" />

                <Button
                    android:id="@+id/goto_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_plus"
                    android:text="+$"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tool_selection"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tools1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/brown">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_cardview5"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/shop_tool_img_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/tool_a" />
                        <TextView
                            android:id="@+id/shop_tool_txt_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:text="@string/tool"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                        <TextView
                            android:id="@+id/tool_cost_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:padding="10dp"
                            android:text="Ok"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tools2"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/brown">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_cardview5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shop_tool_img_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/tool_b" />
                        <TextView
                            android:id="@+id/shop_tool_txt_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:text="@string/toolx2"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                        <TextView
                            android:id="@+id/tool_cost_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:padding="10dp"
                            android:text="@string/x2"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tools5"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/brown">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_cardview5"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/shop_tool_img_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/tool_c" />
                        <TextView
                            android:id="@+id/shop_tool_txt_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:text="@string/toolx5"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                        <TextView
                            android:id="@+id/tool_cost_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:padding="10dp"
                            android:text="@string/x5"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tools10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/brown">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_cardview5"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/shop_tool_img_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/tool_d" />
                        <TextView
                            android:id="@+id/shop_tool_txt_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:text="@string/toolx10"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                        <TextView
                            android:id="@+id/tool_cost_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:padding="10dp"
                            android:text="@string/x10"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttom_shop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tools_50"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/brown">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_cardview5"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/shop_tool_img_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/tool_e" />

                        <TextView
                            android:id="@+id/shop_tool_txt_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:text="@string/toolx50"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/tool_cost_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:padding="10dp"
                            android:text="@string/x50"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>